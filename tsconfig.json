{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["es6", "dom", "es2017"],
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "esModuleInterop": true
  },
  "include": ["src/", "test/"]
}